# {{ ansible_managed }}
totem {
    version: 2
    cluster_name: mycluster
    secauth: off
    transport: udpu
}

nodelist {
    node {
        ring0_addr: srv1
        nodeid: 1
    }

    node {
        ring0_addr: srv2
        nodeid: 2
    }

    node {
        ring0_addr: srv3
        nodeid: 3
    }
}

quorum {
    provider: corosync_votequorum
}

logging {
    to_logfile: yes
    logfile: /var/log/cluster/corosync.log
    to_syslog: yes
}

