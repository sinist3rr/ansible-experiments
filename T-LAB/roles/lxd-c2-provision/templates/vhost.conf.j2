# {{ ansible_managed }}
<VirtualHost *:80>
  ServerName {{ ansible_nodename }}
  DocumentRoot {{ document_root }}
  DirectoryIndex {{ index_file }}
  <Directory {{ document_root }}>
    AllowOverride All
    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
    Require all granted
  </Directory>
</VirtualHost>
